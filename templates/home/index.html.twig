{% extends 'layouts/base.html.twig' %}

{% block title %}Bienvenue a eBusiness{% endblock %}

{% block body %}
 
  <section class="container mb-5 pb-md-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <h2 class="h3 mb-0">Top Offres</h2><a class="btn btn-link fw-normal p-0" href="#">Voir Tous<i class="fi-arrow-long-right ms-2"></i></a>
        </div>
        <div class="tns-carousel-wrapper tns-controls-outside-xxl tns-nav-outside tns-nav-outside-flush mx-n2">
          <div class="tns-carousel-inner row gx-4 mx-0 pt-3 pb-4" data-carousel-options="{&quot;items&quot;: 4, &quot;responsive&quot;: {&quot;0&quot;:{&quot;items&quot;:1},&quot;500&quot;:{&quot;items&quot;:2},&quot;768&quot;:{&quot;items&quot;:3},&quot;992&quot;:{&quot;items&quot;:4}}}">
            <!-- Item-->
            {% for article in articles %}
            <div class="col">
              <div class="card shadow-sm card-hover border-0 h-100">
                <div class="card-img-top card-img-hover"><a class="img-overlay" href="{{path('show', {'id': article.id})}}"></a>
                  <div class="position-absolute start-0 top-0 pt-3 ps-3"><span class="d-table badge bg-success mb-1">Verified</span><span class="d-table badge bg-info">New</span></div>
                  <div class="content-overlay end-0 top-0 pt-3 pe-3">
                    <button class="btn btn-icon btn-light btn-xs text-primary rounded-circle" type="button" data-bs-toggle="tooltip" data-bs-placement="left" title="Add to Wishlist"><i class="fi-heart"></i></button>
                  </div><img src="/uploads/articles/{{article.image}}" alt="{{article.titre}}">
                </div>
                <div class="card-body position-relative pb-3">
                  <p class="text-bold text-info">Publié le : {{article.createdAt | date('d-m-y')}} à {{ article.createdAt | date('H:i')}}</p>
                  <h4 class="mb-1 fs-xs fw-normal text-uppercase text-primary">{{article.titre}}</h4>
                  <h3 class="h6 mb-2 fs-base"><a class="nav-link stretched-link" href="{{path('show', {'id': article.id})}}">{{article.localisation}}</a></h3>
                  <p class="mb-2 fs-sm text-muted">{{article.description | raw}}</p>
                  <div class="fw-bold btn btn-danger btn-sm"><a href="{{path('show', {'id': article.id})}}"></a><i class="fi-cash mt-n1 me-2 lead align-middle opacity-70"></i>Savoir Plus</div>
                </div>
               
              </div>
            </div>
            {% endfor %}
           
            <!-- Item-->
           
          </div>
        </div>
      </section>
{% endblock %}
